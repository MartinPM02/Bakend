{
  "compilerOptions": {

    "target": "es2016",                                  
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "CommonJS",                                
     "outDir": "./dist",                                   
    "esModuleInterop": true,                      
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                      
    "strictNullChecks": false,                         
    "skipLibCheck": true,
    "moduleResolution": "node",        
    "rootDir" : "./src"
  }
}
